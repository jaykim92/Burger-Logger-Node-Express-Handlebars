<div class="container main">
    <div class="mt-4 pt-4">
        <p class="text-center"><i class="fas fa-hamburger fa-7x"></i></p>
        <h1 class="d-flex justify-content-center">Burgers</h1>
    </div>

    <div class="container mt-3">
        <div class="row mx-auto">
            <div class="col-md-6">
                <h2 class="text-center">Ready to be eaten</h2>
                <div class="card mx-auto" style="width: 18rem;">
                    <ul class="list-group list-group-flush mx-auto">
                        {{#each burgers}}
                            {{#unless devoured}}
                                {{> burger-block}}
                            {{/unless}}
                        {{/each}}
                    </ul>
                </div>
            </div>

            <div class="col-md-6">
                <h2 class="text-center">Already devoured</h2>
                <div class="card mx-auto" style="width: 18rem;">
                    <ul class="list group list-group-flush mx-auto">
                        {{#each burgers}}
                            {{#if devoured}}
                                <li class="list-group-item text-muted">
                                    {{burger_name}}
                                </li>
                            {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-4">
        <h2 class="text-center">Add a burger</h2>
        <div class="row mx-auto">
            <div class="col text-center">
                <form class="create-form">
                    <div class="text-center">
                        <label for="burger-input">Enter name of burger:</label>
                        <input class="ml-2" type="text" id="burger-input" name="name">
                        <button type="submit" class="btn btn-outline-primary ml-3">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>